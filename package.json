{
  "name": "chatty-mango-guten-tag",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "wp-scripts build",
    "start": "wp-scripts start",
    "// build:css": "css-minify -d ./assets/css -o ./assets/css",
    "build:scss": "node-sass --output-style expanded ./assets/scss -o ./assets/css",
    "watch:scss": "npm run build:scss && node-sass --output-style expanded --watch ./assets/scss -o ./assets/css"
  },
  "dependencies": {
    "@wordpress/api-fetch": "^7.15.1",
    "css-minify": "^2.0.2",
    "node-sass": "^9.0.0",
    "react-select": "^5.9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.3",
    "@wordpress/scripts": "^30.8.1",
    "del": "^8.0.0",
    "gulp": "^5.0.0",
    "gulp-replace": "^1.1.4",
    "gulp-zip": "^6.1.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  }
}
